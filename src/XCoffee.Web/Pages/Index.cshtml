@page
@model XCoffee.Web.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "XCoffee";
}

<div class="row mt-5">
    <div class="col">
        <div class="al-services-header text-center">
            <h2>Escolha sua bebida</h2>
            <p>Clique em adicionar para escolher sua bebida</p>
        </div>
    </div>
</div>
<form method="post">
    <div class="row">
        @foreach (var product in Model.Catalog)
        {
            <div class="col-sm-6 col-md-6 col-lg-4">
                <div class="al-service-box pt-5 pb-4 px-5 text-center">
                    <span class="al-service-icon"><img src=@Url.Content($"~/img/{product.Thumbnail}") /></span>
                    <h3 class="mt-3">@product.Name</h3>
                    <p class="mt-3">@product.Description</p>
                    <h3 class="mb-3">@product.Price.ToString("C2")</h3>
                    <button type="submit" asp-route-productId="@product.Id" class="btn btn-block btn-primary">Escolher</button>
                </div>
            </div>
        }
    </div>
</form>